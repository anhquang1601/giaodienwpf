                                        <TextBlock VerticalAlignment="Center" FontStyle="Italic" Foreground="#a0522d" Name="sellBodyRightLeftChooseDishTableName" Margin="5 20" FontSize="20" FontWeight="Bold" Text="Bàn 1"/>
                                    </StackPanel>
