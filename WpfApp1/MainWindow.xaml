                                            <TextBlock  Margin="80 13 0 0" Text="Giảm Giá:"/>
                                            <TextBox x:Name="sellBodyRightLefChooseDishDisCount" Margin="5 10 0 0" Text="20.000"/>
                                        </StackPanel>
