                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="20"  Margin="10 43 10 0" Text="Giá:"/>
                                    <TextBox FontSize="20" Height="33" Width="70"  Text="20.000" Name="sellBodyDialogChooseProductPricer" />
                                </StackPanel>
                            </StackPanel>
