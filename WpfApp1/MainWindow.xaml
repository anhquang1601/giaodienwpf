                                <Button Content="Đồng Ý" Name="sellBodyDialogChooseProductAgree" Click="btn_sellBodyDialogChooseProductAgree"  Margin="0 15 14 0" Width="100" Height="30"/>
                                <Button Content="Hủy" Name="sellBodyDialogChooseProductCanCel" Click="btn_sellBodyDialogChooseProductCanCel" Margin="0 15 0 0" Width="100" Height="30"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
