                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem Header="Trang Chủ" Name="home" >
                    <Image Height="750" Source="https://i.pinimg.com/originals/f8/81/ad/f881ad2778cc7d7c88791e14c9419b52.jpg"/>
                </TabItem>
                
