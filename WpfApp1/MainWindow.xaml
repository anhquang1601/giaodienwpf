                                                                <TextBlock Margin="5 0" Text="{Binding Pricer}" Name="sellBodyRightRightRightPricer" FontSize="15"/>
                                                            </StackPanel>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
